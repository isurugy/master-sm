<script>
    $(document).ready(function() {
        $('#form_buyer_payment_method_submit').on('click', function() { $('#form_buyer_payment_method').submit(); });
    });
</script>



<%= form_for @buyer_payment_method ,id:"form_buyer_payment_method", url: {action: "create_payment_method"} do |f| %>
    <div class="row">
      <div class="col-md-3">

      </div>
      <div class="col-md-7" style="padding-left: 100px;padding-bottom: 10px">
        <h2 style="margin-bottom: 20px;">Payment Method</h2>
      </div>
      <div class="col-md-2" style="padding-left: 30px;padding-top:20px">
        <button id="form_buyer_payment_method_submit" class="btn btn-primary" style="width:100px;" >Save</button>
      </div>
    </div>


    <div class="raw">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.text_field :card_name, class: "form-control inputs",placeholder:"Name On Card" %>
        </div>
        <div class="form-group">
          <%= f.text_field :expiry_date, class: "form-control inputs",placeholder:"Expiry Date: mm/yy",onfocus:"(this.type='month')", onblur:"(this.type='text')" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.text_field :card_number, class: "form-control inputs",placeholder:"Card Number" %>
        </div>
        <div class="form-group">
          <%= f.text_field :cvv, class: "form-control inputs",placeholder:"CVV" %>
        </div>
      </div>

    </div>
<% end %>
