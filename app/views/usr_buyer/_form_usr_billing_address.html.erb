<script>
    $(document).ready(function() {
        $('#form_buyer_billing_address_submit').on('click', function() { $('#form_buyer_billing_address').submit(); });
    });
</script>



<%= form_for @buyer_billing_address,id:"form_buyer_billing_address", url: {action: "create_billing_address"} do |f| %>
    <div class="row">
      <div class="col-md-3">

      </div>
      <div class="col-md-7" style="padding-left: 100px;padding-bottom: 10px">
        <h2 style="margin-bottom: 20px;">Billing Address</h2>
      </div>
      <div class="col-md-2" style="padding-left: 30px;padding-top:20px">
        <button id="form_buyer_billing_address_submit" class="btn btn-primary" style="width:100px;" >Save</button>
      </div>
    </div>

    <div class="raw">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.text_field :address_line1, class: "form-control inputs",placeholder:"Address Line 1" %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="form-group">
          <%= f.text_field :address_line2, class: "form-control inputs",placeholder:"Address Line 2" %>
        </div>
      </div>
    </div>
    <div class="raw">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.text_field :city, class: "form-control inputs",placeholder:"City" %>
        </div>
        <div class="form-group" style="height:34px;padding-top:5px">
          <%= f.text_field :country, class: "form-control inputs",placeholder:"Country" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.text_field :zip_code, class: "form-control inputs",placeholder:"Postal Code" %>
        </div>
      </div>
    </div>
<% end %>
