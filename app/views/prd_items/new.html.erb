    }

    .cancel_btn:hover {
      background-color: #ffaf0d;
      color: #040302 !important;
    }
    .add_product_btn {
      background-color: #1b89ff;
      color: white;
      font-family: "Anton";
    }

    @media (min-width:992px) {
      .contain {
        padding-right: 52px;
        padding-left: 35px;
