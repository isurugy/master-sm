        <div class="col-sm-6" style="padding-bottom: 25px; padding-left: 20px">
          <%= p.submit "ADD PRODUCT", class: "btn add_product_btn btn-lg", style:'width:200px' %>
        </div>
      </div>
      <div class="row" style="padding-bottom: 100px">

      </div>

  <% end %>

  <style>
    .cancel_btn {
      background-color: #ffc11e;
      color: white !important;
      font-family: "Anton";
