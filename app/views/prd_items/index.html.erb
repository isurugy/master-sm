    max-width: 100%;
  }

  .itm_img{
      width: 400px !important;
      height: 200px !important;
  }

  .change_size{
    width: 110px;
    height: 30px;
  }

  .itm_btns{
    padding-left: 10px;
    margin-top: -58px;
  }

    .itm_add_to_crt_btn{
      background-color: white;
      color: #5acde2;
      font-weight: bold;
      border:2px solid #44caff;
    }

  .itm_buy_now_btn{
    background-color: white;
