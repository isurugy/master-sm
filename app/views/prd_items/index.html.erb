    padding-left: 80px;
    padding-right: 80px;
  }

  .thubmnail_remove_border{
    border: none;
    -webkit-box-shadow: none;
    width: 250px;
  }

  .alert {
    padding: 0px;
    margin-bottom: 20px;
    border: none;
    border-radius: 4px;
  }

  .con2{
    padding-left: 80px;
    padding-right: 80px;
    background:  #e8e7e7; /* For browsers that do not support gradients */
    background: -webkit-linear-gradient(#efefef, #e8e7e7); /* For Safari 5.1 to 6.0 */
    background: -o-linear-gradient(#efefef, #e8e7e7); /* For Opera 11.1 to 12.0 */
